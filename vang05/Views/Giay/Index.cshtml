@model IEnumerable<ShopGiay.Models.GIAY>

@{
    ViewBag.Title = "TRANG CHỦ";
    Layout = "~/Views/Shared/_LayoutU.cshtml";
}

<h2 class="text-center">Sản Phẩm  Mới Nổi Bật</h2>
<hr>
<div class="row text-center">
    @foreach (var giay in Model)
    {
        <div class="" col-sm-4 col-md-4 col-lg-4 col-xs-6">
            <div class="thumbnail">
                <img src="~/Images/InMages/@giay.AnhGiay" alt="Thumbnail Image 1" lass="img-responsive img-rounded imgbook"
                     style="width:400px;" />
                <p class="giaban">Giá bán: <span>@Html.FormatValue(giay.GiaBan, "{0:#,###.##0}") VNĐ</span></p>
                <div class="caption">
                    <h4 style=" min-height :70px;">
                        <a href="@Url.Action("ChiTietGiay", "Giay", new {id = giay.MaGiay})">@giay.TenGiay</a>
                    </h4>
                    <p>
                        <a href="@Url.Action("ThemGioHang", "GioHang", new {mg = giay.MaGiay, url = Request.Url.ToString()})"
                           class="bth">
                            BuyNow
                        </a>
                    </p>
                </div>
            </div>
        </div>
        }
    </div>


    <nav class="text-center">
        <!-- Add class .pagination-lg for larger blocks or .pagination-sm for smaller blocks-->
        <ul class="pagination">
            <li> <a href="#" aria-label="Previous"> <span aria-hidden="true">&laquo;</span> </a> </li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li class="disabled"><a href="#">5</a></li>
            <li> <a href="#" aria-label="Next"> <span aria-hidden="true">&raquo;</span> </a> </li>
        </ul>
    </nav>
    <hr>



@using ShopGiay.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<ShopGiay.Models.DONDATHANG>


@helper Truncate(string s, int lenght)
{
    if (s.Length < lenght)
    {
        @s;
    }
    else
    {
        @s.Substring(0, lenght)<text>...</text>
    }
}
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center;">DANH SÁCH DƠN HÀNG</h2>

<p>

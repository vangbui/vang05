@model ShopGiay.Models.NHANVIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Nhân Viên</h2>

@using (Html.BeginForm("Create", "NhanVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2">Tên Nhân Viên</label>
        <div class="col-md-10">
            <input type="text" size="70" id="sTenNV" name="gTenGiay" value="@ViewBag.TenNV" required />
        </div>
    </div>

    <<div class="form-group">
        <label class="control-label col-md-2">Dịa Chỉ</label>
        <div class="col-md-10">
            <textarea name="dDiaChi">
                @ViewBag.DiaChi</textarea>
        </div>
    </div>

     <div class="form-group">
         <label class="control-label col-md-2">Diện Thoại</label>
         <div class="col-md-10">
             <textarea name=""sDienThoai">
                @ViewBag.DienThoai</textarea>
         </div>
     </div>

     <div class="form-group">
         <label class="control-label col-md-2">Gioi Tính</label>
         <div class="col-md-10">
             <textarea name="gGioiTinh">
                @ViewBag.GioiTinh</textarea>
         </div>
     </div>

     <div class="form-group">
         <label class="control-label col-md-2">Mật Khẩu</label>
         <div class="col-md-10">
             <textarea name=""mMatKhau">
                @ViewBag.MatKhau</textarea>
         </div>
     </div>

     <div class="form-group">
         <label class="control-label col-md-2">Ngày Sinh</label>
         <div class="col-md-10">
             <textarea name="nNgaySinh">
                @ViewBag.NgaySinh</textarea>
         </div>
     </div>

     <div class="form-group">
         <label class="control-label col-md-2">Email</label>
         <div class="col-md-10">
             <textarea name="eEmail">
                @ViewBag.Email</textarea>
         </div>
     </div>

     <div class="form-group">
         <label class="control-label col-md-2">Quyền</label>
         <div class="col-md-10">
             <textarea name="qQuyen">
                @ViewBag.Quyen</textarea>
         </div>
     </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ ", "Index")
</div>

@model ShopGiay.Models.KHACHHANG

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Khách Hàng</h2>

@using (Html.BeginForm("Create", "KhachHang", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

 <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Khách Hàng</label>
            <div class="col-md-10">
                <textarea name="sHoTen">
                @ViewBag.HoTen</textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Tài Khoản</label>
            <div class="col-md-10">
                <textarea name="tTaiKhoan">
                @ViewBag.TaiKhoan</textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Mật Khẩu</label>
            <div class="col-md-10">
                <textarea name=""mMatKhau">
                @ViewBag.MatKhau" </textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Email</label>
            <div class="col-md-10">
               C
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Dịa Chỉ</label>
            <div class="col-md-10">
                <textarea name="dDiaChi">
                @ViewBag.DiaChi</textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Điện Thoại</label>
            <div class="col-md-10">
                <textarea name="" sDienThoai">
                @ViewBag.DienThoai</textarea>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Ngày Sinh</label>
            <div class="col-md-10">
                <textarea name=""gTenGiay">
             "@ViewBag.NgaySinh" ></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ", "Index")
</div>

@model ShopGiay.Models.GIAY

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<h2>ĐIỀU CHỈNH THÔNG TIN SẢN PHẨM</h2>


@using (Html.BeginForm("Edit", "AGiay", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
   

    <div class="form-group">
        <label class="control-label col-md-2"> Mã Giay:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="iMaGiay" value="@Model.MaGiay" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên Giay:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="gTenGiay" value="@Model.TenGiay" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Mô tả</label>
        <div class="col-md-10">
            <textarea name="gMoTa"><p>@Model.MoTa.Replace("\n","</p><p>")</p>

                </textarea>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ảnh :</label>
        <div class="col-md-10">
            <input type="file" name="fFileUpLoad" />
            <img src="~/Images/InMages/@Model.AnhGiay" width="120" />

        </div>
    </div>

    <<div class="form-group">
        <label class="control-label col-md-2">Số lượng:</label>
        <div class="col-md-10">
            <input type="number" min="1" required name="iSoLuong" value="@Model.SoLuongBan" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Gía bán:</label>
        <div class="col-md-10">
            <input type="number" min="1" required name="mGiaBan" value="@Model.GiaBan" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Nhãn Hiệu:</label>
        <div class="col-md-10">
            @Html.DropDownList("MaNH")
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Nhà sản xuất :</label>
        <div class="col-md-10">
            @Html.DropDownList("MaNSX")
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

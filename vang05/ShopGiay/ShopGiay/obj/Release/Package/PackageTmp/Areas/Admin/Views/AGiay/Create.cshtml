@model ShopGiay.Models.GIAY

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Sản Phẩm</h2>


@using (Html.BeginForm("Create", "AGiay", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Tên Sản Phẩm</label>
            <div class="col-md-10">
                <input type="text" size="70" id="gTenGiay" name="gTenGiay" value="@ViewBag.TenGiay" required />
            </div>
        </div>

        <<div class="form-group">
            <label class="control-label col-md-2">Mô tả</label>
            <div class="col-md-10">
                <textarea name="gMoTa">
                @ViewBag.MoTa</textarea>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Ảnh bìa</label>
            <div class="col-md-10">
                <input type="file" name="fFileUpload" />
                @ViewBag.ThongBao
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Số lượng</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="iSoLuong" value="@ViewBag.SoLuong" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Gía bán</label>
            <div class="col-md-10">
                <input type="number" min="1" required name="mGiaBan" value="@ViewBag.GiaBan" />
            </div>
        </div><<div class="form-group">
            <label class="control-label col-md-2"> Nhãn Hiệu</label>
            <div class="col-md-10">
                @Html.DropDownList("MaNH")
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Nhà Sản Xuất</label>
            <div class="col-md-10">
                @Html.DropDownList("MaNSX")
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "Index")
</div>

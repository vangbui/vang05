@model ShopGiay.Models.GIAY

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="text-align:center">CHI TIẾT </h2>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Giay:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenGiay)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd>
            @Html.Raw(@Model.MoTa.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
        </dd>

        <dt>
            Ảnh :
        </dt>

        <dd>
            <img src="~/Images/InMages/@Model.AnhGiay"alt="@Model.TenGiay" />
        </dd>
        <dt>
            Số lượng bán:
        </dt>

        <dd>
            @Html.DisplayNameFor(model => model.SoLuongBan)
        </dd>

        <dt>
            Gía bán:
        </dt>

        <dd>
            @Html.FormatValue(Model.GiaBan, "{0:#,##0}")VNĐ
        </dd>

        <dt>
            Nhãn Hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHANHIEU.TenNH)
        </dd>

        <dt>
            Nhà sản xuất:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NHASANXUAT.TenNXB)
        </dd>

        
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.MaGiay }) |
    @Html.ActionLink("VỀ TRANG QUẢN LÝ Sản Phẩm", "Index")
</p>
